<script>
    $(function () {

        $.ajax({
            url: "/Conexion/ListaConexiones/",
            type: "GET",
            success: function (data, textStatus, jqXHR) {
                for (var i = 0; i < data.length; i++) {
                    $('#conexion_plaza').append($('<option>', {
                        value: data[i].IdConexion,
                        text: data[i].Plaza
                    }));
                }
            },
            error: function (jqXHR, textStatus, errorThrown) {

            }
        });

        $('input[type=radio][name=busqueda]').change(function () {
            if (this.value == '1') {
                $('#panel_fechas').hide();
                $('#panel_status').show();
            }
            else if (this.value == '2') {
                $('#panel_status').hide();
                $('#panel_fechas').show();
            }
        });

    });
    function AbrirModal() {
        $('#Modal_Plaza').modal("show");
    }

    function plaza_conexion() {
        $('#Modal_Plaza').modal("hide");
        $('#conetar_plaza').hide();
        //$('#encuestaForm').show();
        $('#texto_plaza').text('Plaza ' + $("#conexion_plaza option:selected").text());
        $('#panel_busqueda').show();
    }

    $('#buscar_por_nombre').on('click', function () {
        var id_plaza = $('#conexion_plaza').val();
        var nombre = $('#nombre').val();
        $('#TablaIndividual').show();
        $.ajax({
            url: "/CLIENTE/GetClientesporPlazaJson/",
            type: "GET",
            data: { 'id': id_plaza, "contrato": "", "cliente1": nombre, "direccion": "" },
            success: function (data, textStatus, jqXHR) {
                if (data.length == 0) {
                    $('#TablaIndividual').hide();
                    $('#invalido').show();
                } else {
                    $('#invalido').hide();
                    $('#TablaIndividual tfoot > tr').remove();
                    for (var i = 0; i < data.length; i++) {
                        $('#TablaIndividual tfoot').append('<tr><td>' + data[i].CONTRATO + '</td><td>' + data[i].NOMBRE + '</td><td>' + data[i].Ciudad + '</td><td>' + data[i].Colonia + '</td><td>' + data[i].Calle + '</td><td>' + data[i].NUMERO + '</td><td><button class="btn btn-success" onclick="aplicando_encuesta(this)" data-name="' + data[i].NOMBRE + '" data-ciudad="' + data[i].Ciudad + '" data-colonia="' + data[i].Colonia + '" data-calle="' + data[i].Calle + '" data-numero="' + data[i].NUMERO + '" data-telefono="' + data[i].TELEFONO + '"><i class="fa fa-pie-chart" aria-hidden="true"></i>Aplicar</button></td></tr>');

                    }
                }
            },
            error: function (data, jqXHR, textStatus) {
                console.log(data);
            }

        });
    });
    
    $('#buscar_por_direccion').on('click', function () {
        var id_plaza = $('#conexion_plaza').val();
        var calle = $('#calle').val();
        $('#TablaIndividual').show();
        $.ajax({
            url: "/CLIENTE/GetClientesporPlazaJson/",
            type: "GET",
            data: { 'id': id_plaza, "contrato": "", "cliente1": "", "direccion": calle },
            success: function (data, textStatus, jqXHR) {
                if (data.length == 0) {
                    $('#TablaIndividual').hide();
                    $('#invalido').show();
                } else {
                    $('#invalido').hide();
                    $('#TablaIndividual tfoot > tr').remove();
                    for (var i = 0; i < data.length; i++) {
                        $('#TablaIndividual tfoot').append('<tr><td>' + data[i].CONTRATO + '</td><td>' + data[i].NOMBRE + '</td><td>' + data[i].Ciudad + '</td><td>' + data[i].Colonia + '</td><td>' + data[i].Calle + '</td><td>' + data[i].NUMERO + '</td><td><button class="btn btn-success" onclick="aplicando_encuesta(this)" data-name="' + data[i].NOMBRE + '" data-ciudad="' + data[i].Ciudad + '" data-colonia="' + data[i].Colonia + '" data-calle="' + data[i].Calle + '" data-numero="' + data[i].NUMERO + '" data-telefono="' + data[i].TELEFONO + '"><i class="fa fa-pie-chart" aria-hidden="true"></i>Aplicar</button></td></tr>');

                    }
                }
            },
            error: function (data, jqXHR, textStatus) {
                console.log(data);
            }

        });
    });

